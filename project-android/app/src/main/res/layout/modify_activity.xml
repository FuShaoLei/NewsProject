<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <include layout="@layout/widget_title_bar" />

    <FrameLayout
        android:id="@+id/fl_modify_avator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_bottom_margin"
        android:background="@drawable/bg_normal"
        android:clickable="true"
        android:padding="@dimen/normal_weidget_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="修改头像"
            android:textColor="@color/colorPrimaryText" />

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/modify_avator"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|right" />
    </FrameLayout>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_bottom_margin"
        android:background="@color/colorWidgetBackground"
        android:padding="@dimen/normal_weidget_padding" />

    <EditText
        android:id="@+id/et_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_bottom_margin"
        android:background="@color/colorWidgetBackground"
        android:padding="@dimen/normal_weidget_padding" />
    <EditText
        android:id="@+id/et_origin_pwd"
        android:layout_width="match_parent"
        android:hint="旧密码"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_bottom_margin"
        android:background="@color/colorWidgetBackground"
        android:padding="@dimen/normal_weidget_padding" />
    <EditText
        android:id="@+id/et_new_pwd"
        android:hint="新密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_bottom_margin"
        android:background="@color/colorWidgetBackground"
        android:padding="@dimen/normal_weidget_padding" />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_normal"
        android:gravity="center"
        android:padding="@dimen/normal_weidget_padding"
        android:text="提交"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />
</LinearLayout>